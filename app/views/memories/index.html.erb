<div class="block">

  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to "<b>#{current_user.login}</b>'s MemoryLine", memories_path %></li>
    </ul>
    <div class="clear"></div>
  </div>

  <div class="content">
    <h2 class="title"></h2>
    <div class="inner">
      <% form_for :memory, :url => memories_path, :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>

      <ul id="memories_list">
      <% @memories.each do |memory| %>
        <li <% if @memories.first == memory %>class="first"<% end %>>
          <div class="memory_container">
            <%= link_to h(memory.content), memory_path(memory) %>
            <div class="date"><%= h memory.created_at %></div>
          </div>
        </li>
      <% end %>
      </ul>

      <div class="actions-bar">
        <div class="actions"></div>
        <%= will_paginate @memories, :param_name => :p %>
        <div class="clear"></div>
      </div>

    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

