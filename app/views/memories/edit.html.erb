<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to "#{t("web-app-theme.edit", :default => @memory.content)}", edit_memory_path %></li>
    </ul>
    <div class="clear"></div>
  </div>

  <div class="content">
    <h2 class="title"><%= t("web-app-theme.edit", :default => "Edit") %> Memory</h2>
    <div class="inner">
      <% form_for @memory, :url => memory_path(@memory), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
